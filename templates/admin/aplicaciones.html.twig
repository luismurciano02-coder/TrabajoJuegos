{% extends 'base.html.twig' %}

{% block title %}Gesti√≥n de Aplicaciones - Admin{% endblock %}

{% block body %}
<style>
    .admin-section {
        margin-bottom: 40px;
    }

    .admin-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 30px;
        border-radius: 8px;
        margin-bottom: 30px;
    }

    .admin-header h1 {
        margin: 0 0 10px 0;
        font-size: 2.2em;
    }

    .admin-header p {
        margin: 0;
        opacity: 0.9;
    }

    .aplicaciones-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .aplicaciones-table thead {
        background-color: #667eea;
        color: white;
    }

    .aplicaciones-table th {
        padding: 16px;
        text-align: left;
        font-weight: 600;
        border-bottom: 2px solid #667eea;
    }

    .aplicaciones-table td {
        padding: 14px 16px;
        border-bottom: 1px solid #e0e0e0;
    }

    .aplicaciones-table tbody tr:hover {
        background-color: #f5f5f5;
        transition: background-color 0.2s;
    }

    .aplicaciones-table tbody tr:last-child td {
        border-bottom: none;
    }

    .nombre-cell {
        font-weight: 600;
        color: #667eea;
    }

    .apikey-cell {
        font-family: 'Courier New', monospace;
        background-color: #f5f5f5;
        padding: 8px 12px;
        border-radius: 4px;
        font-size: 0.9em;
        word-break: break-all;
        color: #0066cc;
    }

    .status-badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.85em;
        font-weight: bold;
    }

    .status-active {
        background-color: #d4edda;
        color: #155724;
    }

    .status-inactive {
        background-color: #f8d7da;
        color: #721c24;
    }

    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        text-align: center;
    }

    .stat-card h3 {
        margin: 0 0 10px 0;
        font-size: 2.5em;
        color: #667eea;
    }

    .stat-card p {
        margin: 0;
        color: #666;
        font-size: 0.95em;
    }

    .copy-apikey-btn {
        background-color: #667eea;
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.85em;
        transition: background-color 0.2s;
    }

    .copy-apikey-btn:hover {
        background-color: #764ba2;
    }

    .search-box {
        margin-bottom: 20px;
    }

    .search-box input {
        width: 100%;
        padding: 12px 16px;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 1em;
        box-sizing: border-box;
    }

    .search-box input:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .no-aplicaciones {
        background-color: #f5f5f5;
        padding: 40px;
        text-align: center;
        border-radius: 8px;
        color: #666;
    }

    .back-link {
        display: inline-block;
        margin-bottom: 20px;
        padding: 10px 16px;
        background-color: #667eea;
        color: white;
        text-decoration: none;
        border-radius: 6px;
        font-weight: 600;
        transition: background-color 0.2s;
    }

    .back-link:hover {
        background-color: #764ba2;
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.5);
        animation: fadeIn 0.3s ease-in;
    }

    .modal.show {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    .modal-content {
        background-color: white;
        padding: 30px;
        border-radius: 8px;
        width: 90%;
        max-width: 500px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.3);
        animation: slideUp 0.3s ease-out;
    }

    @keyframes slideUp {
        from { transform: translateY(50px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        border-bottom: 2px solid #667eea;
        padding-bottom: 15px;
    }

    .modal-header h2 {
        margin: 0;
        color: #333;
    }

    .close-modal {
        background: none;
        border: none;
        font-size: 28px;
        cursor: pointer;
        color: #666;
        transition: color 0.2s;
    }

    .close-modal:hover {
        color: #333;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: #333;
    }

    .form-group input {
        width: 100%;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 1em;
        box-sizing: border-box;
        transition: border-color 0.2s;
    }

    .form-group input:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .form-actions {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        margin-top: 25px;
    }

    .btn-submit {
        background-color: #667eea;
        color: white;
        padding: 12px 24px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 600;
        transition: background-color 0.2s;
    }

    .btn-submit:hover {
        background-color: #764ba2;
    }

    .btn-cancel {
        background-color: #e0e0e0;
        color: #333;
        padding: 12px 24px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 600;
        transition: background-color 0.2s;
    }

    .btn-cancel:hover {
        background-color: #d0d0d0;
    }

    .btn-add-aplicacion {
        background-color: #28a745;
        color: white;
        padding: 12px 24px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 600;
        font-size: 1em;
        transition: background-color 0.2s;
        margin-bottom: 20px;
    }

    .btn-add-aplicacion:hover {
        background-color: #218838;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.85em;
        transition: background-color 0.2s;
    }

    .btn-delete:hover {
        background-color: #c82333;
    }

    .actions-cell {
        display: flex;
        gap: 8px;
        align-items: center;
    }
</style>

<div style="max-width: 1200px; margin: 0 auto; padding: 20px;">
    <a href="{{ path('admin_dashboard') }}" class="back-link">‚Üê Volver al Dashboard</a>

    <div class="admin-header">
        <h1>üì± Gesti√≥n de Aplicaciones</h1>
        <p>Lista completa de aplicaciones registradas en el sistema con sus API Keys</p>
    </div>

    <button class="btn-add-aplicacion" onclick="openModal()">‚ûï Crear Nueva Aplicaci√≥n</button>

    <div class="stats-container">
        <div class="stat-card">
            <h3>{{ aplicaciones|length }}</h3>
            <p>Total de Aplicaciones</p>
        </div>
        <div class="stat-card">
            <h3>{{ aplicaciones|filter(a => a.activo)|length }}</h3>
            <p>Aplicaciones Activas</p>
        </div>
    </div>

    <div class="search-box">
        <input type="text" id="searchInput" placeholder="üîç Buscar por nombre de aplicaci√≥n..." onkeyup="filterTable()">
    </div>

    {% if aplicaciones|length > 0 %}
        <table class="aplicaciones-table" id="aplicacionesTable">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>API Key</th>
                    <th>Estado</th>
                    <th>Juegos</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for aplicacion in aplicaciones %}
                    <tr class="app-row" data-nombre="{{ aplicacion.nombre|lower }}">
                        <td class="nombre-cell">{{ aplicacion.nombre }}</td>
                        <td>
                            <div style="display: flex; gap: 10px; align-items: center;">
                                <span class="apikey-cell">{{ aplicacion.apikey }}</span>
                                <button class="copy-apikey-btn" onclick="copyToClipboard('{{ aplicacion.apikey }}', this)">Copiar</button>
                            </div>
                        </td>
                        <td>
                            {% if aplicacion.activo %}
                                <span class="status-badge status-active">‚úì Activa</span>
                            {% else %}
                                <span class="status-badge status-inactive">‚úó Inactiva</span>
                            {% endif %}
                        </td>
                        <td style="text-align: center; font-weight: 600; color: #667eea;">{{ aplicacion.jugando|length }}</td>
                        <td>
                            <div class="actions-cell">
                                <button class="btn-delete" onclick="openDeleteModal({{ aplicacion.id }}, '{{ aplicacion.nombre }}')">üóëÔ∏è Eliminar</button>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="no-aplicaciones">
            <h3>No hay aplicaciones registradas</h3>
            <p>A√∫n no hay aplicaciones en el sistema</p>
        </div>
    {% endif %}
</div>

<!-- Modal para crear aplicaci√≥n -->
<div id="crearAppModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>‚ûï Crear Nueva Aplicaci√≥n</h2>
            <button class="close-modal" onclick="closeModal()">&times;</button>
        </div>
        <form method="POST" action="{{ path('admin_aplicacion_crear') }}">
            <input type="hidden" name="_token" value="{{ csrf_token('admin_aplicacion_crear') }}">
            <div class="form-group">
                <label for="nombre">Nombre de la Aplicaci√≥n <span style="color: #dc3545;">*</span></label>
                <input type="text" id="nombre" name="nombre" required placeholder="Mi Aplicaci√≥n de Juegos">
            </div>
            <div style="background-color: #f5f5f5; padding: 12px; border-radius: 6px; margin-bottom: 20px;">
                <p style="margin: 0; font-size: 0.9em; color: #666;">
                    <strong>‚ÑπÔ∏è Nota:</strong> Se generar√° autom√°ticamente una API Key √∫nica para esta aplicaci√≥n.
                </p>
            </div>
            <div class="form-actions">
                <button type="button" class="btn-cancel" onclick="closeModal()">Cancelar</button>
                <button type="submit" class="btn-submit">Crear Aplicaci√≥n</button>
            </div>
        </form>
    </div>
</div>

<!-- Modal para eliminar aplicaci√≥n -->
<div id="deleteAppModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>üóëÔ∏è Eliminar Aplicaci√≥n</h2>
            <button class="close-modal" onclick="closeDeleteModal()">&times;</button>
        </div>
        <p style="color: #666; margin-bottom: 20px;">
            ¬øEst√°s seguro de que quieres eliminar esta aplicaci√≥n?
        </p>
        <div style="background-color: #f5f5f5; padding: 15px; border-radius: 6px; margin-bottom: 20px;">
            <p style="margin: 5px 0; color: #333;"><strong>Nombre:</strong> <span id="deleteName"></span></p>
        </div>
        <p style="color: #dc3545; font-size: 0.95em; margin-bottom: 20px;">
            ‚ö†Ô∏è Esta acci√≥n no se puede deshacer. Se eliminar√°n todos los datos asociados a esta aplicaci√≥n.
        </p>
        <form method="POST" id="deleteForm">
            <input type="hidden" name="_token" value="{{ csrf_token('delete_aplicacion') }}">
            <div class="form-actions">
                <button type="button" class="btn-cancel" onclick="closeDeleteModal()">Cancelar</button>
                <button type="submit" class="btn-delete" style="padding: 12px 24px;">S√≠, Eliminar Aplicaci√≥n</button>
            </div>
        </form>
    </div>
</div>

<script>
function openModal() {
    document.getElementById('crearAppModal').classList.add('show');
}

function closeModal() {
    document.getElementById('crearAppModal').classList.remove('show');
}

function openDeleteModal(appId, nombre) {
    document.getElementById('deleteName').textContent = nombre;
    document.getElementById('deleteForm').action = '{{ path('admin_aplicacion_delete', {'id': 'PLACEHOLDER'}) }}'.replace('PLACEHOLDER', appId);
    document.getElementById('deleteAppModal').classList.add('show');
}

function closeDeleteModal() {
    document.getElementById('deleteAppModal').classList.remove('show');
}

// Cerrar modal cuando se hace click fuera
window.onclick = function(event) {
    const crearModal = document.getElementById('crearAppModal');
    const deleteModal = document.getElementById('deleteAppModal');
    if (event.target == crearModal) {
        crearModal.classList.remove('show');
    }
    if (event.target == deleteModal) {
        deleteModal.classList.remove('show');
    }
}

function filterTable() {
    const input = document.getElementById('searchInput');
    const filter = input.value.toLowerCase();
    const table = document.getElementById('aplicacionesTable');
    const rows = table.getElementsByClassName('app-row');

    Array.from(rows).forEach(row => {
        const nombre = row.getAttribute('data-nombre');
        
        if (nombre.includes(filter)) {
            row.style.display = '';
        } else {
            row.style.display = 'none';
        }
    });
}

function copyToClipboard(text, button) {
    navigator.clipboard.writeText(text).then(() => {
        const originalText = button.textContent;
        button.textContent = '‚úì Copiado';
        button.style.backgroundColor = '#28a745';
        
        setTimeout(() => {
            button.textContent = originalText;
            button.style.backgroundColor = '';
        }, 2000);
    }).catch(err => {
        console.error('Error al copiar:', err);
        alert('Error al copiar la API Key');
    });
}
</script>

{% endblock %}
