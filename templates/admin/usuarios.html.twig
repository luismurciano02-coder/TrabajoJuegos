{% extends 'base.html.twig' %}

{% block title %}Gesti√≥n de Usuarios - Admin{% endblock %}

{% block body %}
<style>
    .admin-section {
        margin-bottom: 40px;
    }

    .admin-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 30px;
        border-radius: 8px;
        margin-bottom: 30px;
    }

    .admin-header h1 {
        margin: 0 0 10px 0;
        font-size: 2.2em;
    }

    .admin-header p {
        margin: 0;
        opacity: 0.9;
    }

    .usuarios-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .usuarios-table thead {
        background-color: #667eea;
        color: white;
    }

    .usuarios-table th {
        padding: 16px;
        text-align: left;
        font-weight: 600;
        border-bottom: 2px solid #667eea;
    }

    .usuarios-table td {
        padding: 14px 16px;
        border-bottom: 1px solid #e0e0e0;
    }

    .usuarios-table tbody tr:hover {
        background-color: #f5f5f5;
        transition: background-color 0.2s;
    }

    .usuarios-table tbody tr:last-child td {
        border-bottom: none;
    }

    .email-cell {
        font-weight: 600;
        color: #667eea;
    }

    .nombre-cell {
        color: #333;
    }

    .token-cell {
        font-family: 'Courier New', monospace;
        background-color: #f5f5f5;
        padding: 8px 12px;
        border-radius: 4px;
        font-size: 0.9em;
        word-break: break-all;
        color: #0066cc;
    }

    .status-badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.85em;
        font-weight: bold;
    }

    .status-active {
        background-color: #d4edda;
        color: #155724;
    }

    .status-inactive {
        background-color: #f8d7da;
        color: #721c24;
    }

    .role-badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 4px;
        font-size: 0.85em;
        font-weight: bold;
        background-color: #e3f2fd;
        color: #667eea;
    }

    .role-badge.admin {
        background-color: #fff3cd;
        color: #856404;
    }

    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        text-align: center;
    }

    .stat-card h3 {
        margin: 0 0 10px 0;
        font-size: 2.5em;
        color: #667eea;
    }

    .stat-card p {
        margin: 0;
        color: #666;
        font-size: 0.95em;
    }

    .copy-token-btn {
        background-color: #667eea;
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.85em;
        transition: background-color 0.2s;
    }

    .copy-token-btn:hover {
        background-color: #764ba2;
    }

    .search-box {
        margin-bottom: 20px;
    }

    .search-box input {
        width: 100%;
        padding: 12px 16px;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 1em;
        box-sizing: border-box;
    }

    .search-box input:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .no-usuarios {
        background-color: #f5f5f5;
        padding: 40px;
        text-align: center;
        border-radius: 8px;
        color: #666;
    }

    .back-link {
        display: inline-block;
        margin-bottom: 20px;
        padding: 10px 16px;
        background-color: #667eea;
        color: white;
        text-decoration: none;
        border-radius: 6px;
        font-weight: 600;
        transition: background-color 0.2s;
    }

    .back-link:hover {
        background-color: #764ba2;
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.5);
        animation: fadeIn 0.3s ease-in;
    }

    .modal.show {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    .modal-content {
        background-color: white;
        padding: 30px;
        border-radius: 8px;
        width: 90%;
        max-width: 500px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.3);
        animation: slideUp 0.3s ease-out;
    }

    @keyframes slideUp {
        from { transform: translateY(50px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        border-bottom: 2px solid #667eea;
        padding-bottom: 15px;
    }

    .modal-header h2 {
        margin: 0;
        color: #333;
    }

    .close-modal {
        background: none;
        border: none;
        font-size: 28px;
        cursor: pointer;
        color: #666;
        transition: color 0.2s;
    }

    .close-modal:hover {
        color: #333;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: #333;
    }

    .form-group input {
        width: 100%;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 1em;
        box-sizing: border-box;
        transition: border-color 0.2s;
    }

    .form-group input:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .form-actions {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        margin-top: 25px;
    }

    .btn-submit {
        background-color: #667eea;
        color: white;
        padding: 12px 24px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 600;
        transition: background-color 0.2s;
    }

    .btn-submit:hover {
        background-color: #764ba2;
    }

    .btn-cancel {
        background-color: #e0e0e0;
        color: #333;
        padding: 12px 24px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 600;
        transition: background-color 0.2s;
    }

    .btn-cancel:hover {
        background-color: #d0d0d0;
    }

    .btn-add-usuario {
        background-color: #28a745;
        color: white;
        padding: 12px 24px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 600;
        font-size: 1em;
        transition: background-color 0.2s;
        margin-bottom: 20px;
    }

    .btn-add-usuario:hover {
        background-color: #218838;
    }

    .alert {
        padding: 15px;
        border-radius: 6px;
        margin-bottom: 20px;
        font-weight: 500;
    }

    .alert-error {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.85em;
        transition: background-color 0.2s;
    }

    .btn-delete:hover {
        background-color: #c82333;
    }

    .actions-cell {
        display: flex;
        gap: 8px;
        align-items: center;
    }
</style>

<div style="max-width: 1200px; margin: 0 auto; padding: 20px;">
    <a href="{{ path('admin_dashboard') }}" class="back-link">‚Üê Volver al Dashboard</a>

    <div class="admin-header">
        <h1>üë• Gesti√≥n de Usuarios</h1>
        <p>Lista completa de usuarios registrados en el sistema con sus tokens de acceso</p>
    </div>

    {% if error is defined %}
        <div class="alert alert-error">
            ‚ö†Ô∏è {{ error }}
        </div>
    {% endif %}

    <button class="btn-add-usuario" onclick="openModal()">‚ûï A√±adir Nuevo Usuario</button>

    <div class="stats-container">
        <div class="stat-card">
            <h3>{{ usuarios|length }}</h3>
            <p>Total de Usuarios</p>
        </div>
        <div class="stat-card">
            <h3>{{ usuarios|filter(u => u.activo)|length }}</h3>
            <p>Usuarios Activos</p>
        </div>
        <div class="stat-card">
            <h3>{{ usuarios|filter(u => u.roles|length > 0 and 'ROLE_ADMIN' in u.roles)|length }}</h3>
            <p>Administradores</p>
        </div>
    </div>

    <div class="search-box">
        <input type="text" id="searchInput" placeholder="üîç Buscar por email o nombre..." onkeyup="filterTable()">
    </div>

    {% if usuarios|length > 0 %}
        <table class="usuarios-table" id="usuariosTable">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Nombre</th>
                    <th>Rol</th>
                    <th>Estado</th>
                    <th>Token</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for usuario in usuarios %}
                    <tr class="usuario-row" data-email="{{ usuario.email|lower }}" data-nombre="{{ usuario.nombre|lower }}">
                        <td class="email-cell">{{ usuario.email }}</td>
                        <td class="nombre-cell">{{ usuario.nombre|default('N/A') }}</td>
                        <td>
                            {% if usuario.roles and 'ROLE_ADMIN' in usuario.roles %}
                                <span class="role-badge admin">üîë ADMIN</span>
                            {% else %}
                                <span class="role-badge">üë§ USER</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if usuario.activo %}
                                <span class="status-badge status-active">‚úì Activo</span>
                            {% else %}
                                <span class="status-badge status-inactive">‚úó Inactivo</span>
                            {% endif %}
                        </td>
                        <td>
                            <div style="display: flex; gap: 10px; align-items: center;">
                                <span class="token-cell">{{ usuario.token }}</span>
                                <button class="copy-token-btn" onclick="copyToClipboard('{{ usuario.token }}', this)">Copiar</button>
                            </div>
                        </td>
                        <td>
                            <div class="actions-cell">
                                <button class="btn-delete" onclick="openDeleteModal({{ usuario.id }}, '{{ usuario.email }}', '{{ usuario.nombre }}')">üóëÔ∏è Eliminar</button>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="no-usuarios">
            <h3>No hay usuarios registrados</h3>
            <p>A√∫n no hay usuarios en el sistema</p>
        </div>
    {% endif %}
</div>

<!-- Modal para crear usuario -->
<div id="crearUsuarioModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>‚ûï Crear Nuevo Usuario</h2>
            <button class="close-modal" onclick="closeModal()">&times;</button>
        </div>
        <form method="POST" action="{{ path('admin_usuario_crear') }}">
            <div class="form-group">
                <label for="email">Email <span style="color: #dc3545;">*</span></label>
                <input type="email" id="email" name="email" required placeholder="usuario@example.com">
            </div>
            <div class="form-group">
                <label for="nombre">Nombre <span style="color: #dc3545;">*</span></label>
                <input type="text" id="nombre" name="nombre" required placeholder="Juan P√©rez">
            </div>
            <div class="form-group">
                <label for="password">Contrase√±a <span style="color: #dc3545;">*</span></label>
                <input type="password" id="password" name="password" required placeholder="Contrase√±a segura">
            </div>
            <div class="form-group">
                <label for="role">Rol</label>
                <select id="role" name="role" style="width:100%; padding:12px; border:1px solid #ddd; border-radius:6px;">
                    <option value="ROLE_USER" selected>üë§ Usuario (ROLE_USER)</option>
                    <option value="ROLE_ADMIN">üîë Administrador (ROLE_ADMIN)</option>
                </select>
            </div>
            <div class="form-actions">
                <button type="button" class="btn-cancel" onclick="closeModal()">Cancelar</button>
                <button type="submit" class="btn-submit">Crear Usuario</button>
            </div>
        </form>
    </div>
</div>

<!-- Modal para eliminar usuario -->
<div id="deleteUsuarioModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>üóëÔ∏è Eliminar Usuario</h2>
            <button class="close-modal" onclick="closeDeleteModal()">&times;</button>
        </div>
        <p style="color: #666; margin-bottom: 20px;">
            ¬øEst√°s seguro de que quieres eliminar al usuario?
        </p>
        <div style="background-color: #f5f5f5; padding: 15px; border-radius: 6px; margin-bottom: 20px;">
            <p style="margin: 5px 0; color: #333;"><strong>Email:</strong> <span id="deleteEmail"></span></p>
            <p style="margin: 5px 0; color: #333;"><strong>Nombre:</strong> <span id="deleteName"></span></p>
        </div>
        <p style="color: #dc3545; font-size: 0.95em; margin-bottom: 20px;">
            ‚ö†Ô∏è Esta acci√≥n no se puede deshacer. Se eliminar√°n todos los datos asociados a este usuario.
        </p>
        <form method="POST" id="deleteForm">
            <input type="hidden" name="_token" value="{{ csrf_token('delete_usuario') }}">
            <div class="form-actions">
                <button type="button" class="btn-cancel" onclick="closeDeleteModal()">Cancelar</button>
                <button type="submit" class="btn-delete" style="padding: 12px 24px;">S√≠, Eliminar Usuario</button>
            </div>
        </form>
    </div>
</div>

<script>
function openModal() {
    document.getElementById('crearUsuarioModal').classList.add('show');
}

function closeModal() {
    document.getElementById('crearUsuarioModal').classList.remove('show');
}

function openDeleteModal(usuarioId, email, nombre) {
    document.getElementById('deleteEmail').textContent = email;
    document.getElementById('deleteName').textContent = nombre;
    document.getElementById('deleteForm').action = '{{ path('admin_usuario_delete', {'id': 'PLACEHOLDER'}) }}'.replace('PLACEHOLDER', usuarioId);
    document.getElementById('deleteUsuarioModal').classList.add('show');
}

function closeDeleteModal() {
    document.getElementById('deleteUsuarioModal').classList.remove('show');
}

// Cerrar modal cuando se hace click fuera
window.onclick = function(event) {
    const crearModal = document.getElementById('crearUsuarioModal');
    const deleteModal = document.getElementById('deleteUsuarioModal');
    if (event.target == crearModal) {
        crearModal.classList.remove('show');
    }
    if (event.target == deleteModal) {
        deleteModal.classList.remove('show');
    }
}

function filterTable() {
    const input = document.getElementById('searchInput');
    const filter = input.value.toLowerCase();
    const table = document.getElementById('usuariosTable');
    const rows = table.getElementsByClassName('usuario-row');

    Array.from(rows).forEach(row => {
        const email = row.getAttribute('data-email');
        const nombre = row.getAttribute('data-nombre');
        
        if (email.includes(filter) || nombre.includes(filter)) {
            row.style.display = '';
        } else {
            row.style.display = 'none';
        }
    });
}

function copyToClipboard(text, button) {
    navigator.clipboard.writeText(text).then(() => {
        const originalText = button.textContent;
        button.textContent = '‚úì Copiado';
        button.style.backgroundColor = '#28a745';
        
        setTimeout(() => {
            button.textContent = originalText;
            button.style.backgroundColor = '';
        }, 2000);
    }).catch(err => {
        console.error('Error al copiar:', err);
        alert('Error al copiar el token');
    });
}
</script>

{% endblock %}
