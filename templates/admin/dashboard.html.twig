
{% extends 'base.html.twig' %}

{% block title %}Panel de Control - Eugenio{% endblock %}

{% block body %}
<style>
    .admin-links {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .admin-link-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 25px;
        border-radius: 8px;
        text-decoration: none;
        transition: transform 0.2s, box-shadow 0.2s;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .admin-link-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.2);
        color: white;
    }

    .admin-link-card h3 {
        margin: 0 0 10px 0;
        font-size: 1.3em;
    }

    .admin-link-card p {
        margin: 0;
        opacity: 0.9;
        font-size: 0.95em;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        text-align: center;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.15);
    }

    .stat-card h3 {
        margin: 0;
        font-size: 2.5em;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .stat-card p {
        margin: 10px 0 0 0;
        color: #666;
        font-weight: 600;
    }

    .puntuaciones-section {
        background: white;
        padding: 25px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        margin-top: 20px;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        border-bottom: 2px solid #667eea;
        padding-bottom: 15px;
    }

    .section-header h2 {
        margin: 0;
        color: #333;
        font-size: 1.8em;
    }

    .filter-group {
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .filter-group label {
        font-weight: 600;
        color: #333;
        margin: 0;
    }

    .filter-group select {
        padding: 8px 12px;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 0.95em;
        cursor: pointer;
        transition: border-color 0.2s;
    }

    .filter-group select:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .puntuaciones-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    .puntuaciones-table thead {
        background-color: #667eea;
        color: white;
    }

    .puntuaciones-table th {
        padding: 15px;
        text-align: left;
        font-weight: 600;
        border-bottom: 2px solid #667eea;
    }

    .puntuaciones-table td {
        padding: 12px 15px;
        border-bottom: 1px solid #e0e0e0;
    }

    .puntuaciones-table tbody tr:hover {
        background-color: #f5f5f5;
        transition: background-color 0.2s;
    }

    .puntuaciones-table tbody tr:last-child td {
        border-bottom: none;
    }

    .usuario-cell {
        font-weight: 600;
        color: #667eea;
    }

    .juego-cell {
        color: #333;
    }

    .puntuacion-cell {
        font-weight: 700;
        color: #28a745;
        font-size: 1.1em;
    }

    .fecha-cell {
        color: #999;
        font-size: 0.9em;
    }

    .no-puntuaciones {
        text-align: center;
        padding: 40px;
        color: #999;
    }
</style>

<div class="container mt-4">
    <h1>üìä Panel de Administraci√≥n</h1>
    <hr>

    <div class="admin-links">
        <a href="{{ path('admin_usuarios') }}" class="admin-link-card">
            <h3>üë• Gesti√≥n de Usuarios</h3>
            <p>Ver todos los usuarios con sus tokens</p>
        </a>
        <a href="{{ path('admin_aplicaciones') }}" class="admin-link-card" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
            <h3>üì± Gesti√≥n de Aplicaciones</h3>
            <p>Administrar aplicaciones registradas</p>
        </a>
        <a href="{{ path('admin_tokens') }}" class="admin-link-card" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
            <h3>üîë Tokens de Apps</h3>
            <p>Administrar tokens de aplicaciones</p>
        </a>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <h3>{{ total_jugadas }}</h3>
            <p>üéÆ Total de Partidas Jugadas</p>
        </div>
        <div class="stat-card">
            <h3>{{ juegos_activos|length }}</h3>
            <p>üïπÔ∏è Juegos Registrados</p>
        </div>
    </div>

    <div class="puntuaciones-section">
        <div class="section-header">
            <h2>üìà Hist√≥rico de Puntuaciones</h2>
            <div class="filter-group">
                <label for="usuarioFilter">Filtrar por Usuario:</label>
                <select id="usuarioFilter" onchange="filterByUser()">
                    <option value="">Todos los usuarios</option>
                    {% set usuariosUnicos = [] %}
                    {% for puntuacion in historico_completo %}
                        {% if puntuacion.juego and puntuacion.user %}
                            {% if puntuacion.user.email not in usuariosUnicos %}
                                {% set usuariosUnicos = usuariosUnicos|merge([puntuacion.user.email]) %}
                                <option value="{{ puntuacion.user.email }}">{{ puntuacion.user.nombre|default(puntuacion.user.email) }}</option>
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                </select>
            </div>
        </div>

        {% if historico_completo|length > 0 %}
            <table class="puntuaciones-table" id="puntuacionesTable">
                <thead>
                    <tr>
                        <th>üë§ Usuario</th>
                        <th>üéÆ Juego</th>
                        <th>‚≠ê Puntuaci√≥n</th>
                        <th>üìÖ Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    {% for puntuacion in historico_completo %}
                        {% if puntuacion.juego %}
                        <tr class="score-row" data-usuario="{{ puntuacion.user.email|lower }}">
                            <td class="usuario-cell">{{ puntuacion.user.nombre|default(puntuacion.user.email) }}</td>
                            <td class="juego-cell">{{ puntuacion.juego.nombre }}</td>
                            <td class="puntuacion-cell">{{ puntuacion.puntuacion }}</td>
                            <td class="fecha-cell">{{ puntuacion.fecha|date('d/m/Y H:i') }}</td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="no-puntuaciones">
                <p>No hay puntuaciones registradas a√∫n.</p>
            </div>
        {% endif %}
    </div>
</div>

<script>
function filterByUser() {
    const filter = document.getElementById('usuarioFilter').value.toLowerCase();
    const rows = document.querySelectorAll('.score-row');
    
    rows.forEach(row => {
        const usuario = row.getAttribute('data-usuario');
        
        if (filter === '' || usuario.includes(filter)) {
            row.style.display = '';
        } else {
            row.style.display = 'none';
        }
    });
}
</script>

{% endblock %}